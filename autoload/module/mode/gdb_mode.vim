function! module#mode#gdb_mode#init()
	noremap <F1> :Over<cr>
	noremap <F2> :Step<cr>
	noremap <F3> :Until<cr>
	noremap <F4> :call TermDebugSendCommand('info locals')<cr>
endfunc


